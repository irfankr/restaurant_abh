<div class="container" style="margin-top:25px;">
  {{#admin-notification visible=notification.visible classStyle=notification.classStyle text=notification.text}}{{/admin-notification}}
</div>

{{outlet}}

{{#admin-restaurants-add-tabs displayAdditionalOptions=true idRestaurant=model.idRestaurant}}{{/admin-restaurants-add-tabs}}

<div class="container">

  <div class="box_shadow administration_fields">
    <div class="row" style="margin-bottom:25px;">
      <div class="col-md-12">
        <span style="font-weight:600; font-size:16px;">Photos</span>
        {{#link-to 'admin.restaurants.add.gallery.add' model.idRestaurant class='add_photos_button'}}Add photos{{/link-to}}
      </div>
    </div>

    <div class="thumb_container">
      {{#each imagesList as |image|}}
        <div class="thumb" style="background-image:url('{{image.imageFileName}}');">
          <div class="hover" {{action 'removeImage' image.id}}><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></div>
        </div>
      {{/each}}
    </div>

    {{#if edited}}
      <div class="row">
        <div style="margin-right:15px; margin-top:40px;">
          <button {{action 'saveChanges'}} class="btn button pull-right">Save</button>
          <button {{action 'cancel'}} class="btn cancel_button pull-right">Cancel</button>
        </div>
      </div>
    {{/if}}
  </div>
</div>